@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-6">
        <h3 class="display-4">Top Rated Movies From IMDb</h3>
    </div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <input asp-for="@Model.IMDBId" type="text"  /><button class="col-md-3 btn-primary" type="submit" asp-action="Index">Add Moive With IMDb Id</button>
            </div>
        </form>
    </div>
</div>
<br>
<div class="row">
    @foreach (var Movie in Model.MovieList)
    {
        <div class="col-md-3">
            <div class="card" style=" margin-top: 20px">
                <div class="card-header">
                    <img src="@Movie.Image" class="card-img-top" width="200" /> 
                </div>
                <div class="card-body">
                    <h3>@Movie.Title</h3>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <p class="card-text">@Movie.Description</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>