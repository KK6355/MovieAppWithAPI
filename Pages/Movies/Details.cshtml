@page
@model MovieAppWithAPI.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>Movie Details</h1>
    <hr />
</div>
<br>
<div class="row">
    <div class="col-md-3">
        <img src="@Model.Movie.Image" width="300" />
    </div>
    <div class="col-md-9">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Title)
            </dt>
            <dd class="col-sm-10" style="font-size:20px;font-weight:bold;">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.IMDBId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.IMDBId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.ReleaseYear)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.ReleaseYear)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cast)
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var member in Model.CastList)
                    {
                        <li>@member.FirstName @member.LastName --- @member.ScreenName</li>

                    }
                </ul>
            </dd>
        </dl>
    </div>
</div>
<br>
<div class="row">
    <dl>       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie?.MovieId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
